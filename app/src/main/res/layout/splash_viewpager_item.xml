<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/splash_viewpager_item_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <!--  android:background="@drawable/btn_round_corner_bg"
     android:textColor="@drawable/press_white_text_color" -->

    <Button
        android:id="@+id/splash_viewpager_item_btn_start"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dip"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@drawable/landing_light_bg"
        android:text="开始体验"
        android:visibility="gone"/>

</RelativeLayout>